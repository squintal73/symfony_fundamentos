{% extends "base.html.twig" %}
  {% block title %}
    Lista de Tarefas
  {% endblock %}
{% block body %}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Título</th>
          <th scope="col">Descrição</th>
          <th scope="col">Data</th>
           <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
    {% for task in tasks %}
        <tr>
          <th scope="row">{{ task.id }}</th>
          <td>{{ task.title }}</td>
          <td>{{ task.description }}</td>
          <td></td>
          <td>
           <a href="{{ url('task_show', {id:task.id}) }}" class="btn btn-primary">Ver</a>
           <a href="{{ url('task_edit', {id:task.id}) }}" class="btn btn-success">Atualizar</a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
{% endblock %}
